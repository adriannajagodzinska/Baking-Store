@model OIprojekt.Models.Recipe
<style>
            #tlo {
            background-color: rgba(249, 242, 236,.7);
        }
                #usun {
        color: firebrick;
    }
    #button {
        background-color:firebrick;
    }
</style>
@{
    ViewBag.Title = "Delete";
}

<h2>Usuń przepis</h2>
<p class="error">@ViewBag.ErrorMessage</p>
<h3 id="usun">Czy na pewno chcesz usunąć przepis?</h3>
<div id="tlo">
   @* <h4>Recipe</h4>*@
    <hr />
    <dl class="dl-horizontal">
        <dt>
           @* @Html.DisplayNameFor(model => model.RecipeName)*@
            Nazwa przepisu
        </dt>

        <dd>
            @Html.DisplayFor(model => model.RecipeName)
        </dd>

        <dt>
            @*@Html.DisplayNameFor(model => model.Sources)*@
            Źródło
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Sources)
        </dd>

        <dt>
           @* @Html.DisplayNameFor(model => model.Preparation)*@
            Sposób przygotowania
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Preparation)
        </dd>

        <dt>
           @* @Html.DisplayNameFor(model => model.Date)*@
            Data dodania
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Date)
        </dd>

        <dt>
          @*  @Html.DisplayNameFor(model => model.Calories)*@
            Wartość kaloryczna
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Calories)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" id="button" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Powrót do listy przepisów", "Index")
        </div>
    }
</div>
